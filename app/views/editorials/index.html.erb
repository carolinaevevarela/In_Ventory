<link href="https://fonts.googleapis.com/css?family=Arvo:400,700&display=swap" rel="stylesheet">

<p id="notice"><%= notice %></p>

<h1>Proveedores</h1>

<table>
  <thead>
    <tr>
      <th>Razón social</th>
      <th>Rut</th>
      <th>Dirección</th>
      <th>Contacto</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editorials.each do |editorial| %>
      <tr>
        <td><%= editorial.business_name %></td>
        <td><%= editorial.rut %></td>
        <td><%= editorial.address %></td>
        <td><%= editorial.contact %></td>
        <td><%= editorial.phone %></td>
        <td><%= editorial.email %></td>
        <td><%= link_to 'Mostrar', editorial %></td>
        <td><%= link_to 'Editar', edit_editorial_path(editorial) %></td>
        <td><%= link_to 'Destruir', editorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proveedor', new_editorial_path %>
